<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>問題管理システム</title>
<style>
  body {
    font-family: Arial, sans-serif;
  }
  .header {
    background-color: #fb9221;
    padding: 10px;
    text-align: center;
  }
  .button {
    background-color: #f0f0f0;
    border: none;
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
  }
  .search-box {
    padding: 10px 20px;
  }
  .search-button {
    cursor: pointer;
  }
  table {
    width: 100%;
    border-collapse: collapse;
  }
  th, td {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }
  th {
    background-color: #f4973b;
  }
  .radio-button {
    margin-right: 15px;
  }
</style>

<div id="table-container">
  <table>
    <thead>
      <tr>
        <th>問題ID</th>
        <th>問題名</th>
        <th>問題テキスト</th>
        <th>画像フラグ</th>
        <th>タイプID</th>
      </tr>
    </thead>
    <tbody id="output">
      <!-- ここにデータが表示される -->
    </tbody>
  </table>
</div>

</body>
</html>
</head>

<body onload="fetchData()">

<div class="header">
  <h1>問題管理システム</h1>
</div>

<div id="table-container">
  <table>
    <thead>
      <tr>
        <th>問題ID</th>
        <th>問題名</th>
        <th>問題テキスト</th>
        <th>画像フラグ</th>
        <th>タイプID</th>
      </tr>
    </thead>
    <tbody id="output">
      <!-- ここにデータが表示される -->
    </tbody>
  </table>
</div>

<script>
  function fetchData() {
    fetch('/api/data')
      .then(response => response.json())
      .then(data => {
        const output = document.getElementById('output');
        output.innerHTML = data.map(row => `
          <tr>
            <td>${row.question_ID}</td>
            <td>${row.question_name}</td>
            <td>${row.question_text}</td>
            <td>${row.picture_flag}</td>
            <td>${row.type_ID}</td>
          </tr>
        `).join('');
      })
      .catch(error => console.error('Error:', error));
  }
</script>

</body>
</html>

<body>

<div>
  <button class="button">新規作成</button>
  <button class="button">選択した問題の編集</button>
  <button class="button">選択した問題の削除</button>
  <input type="text" placeholder="検索..." class="search-box">
  <button class="search-button">🔎</button>
</div>
</body>
</html>

